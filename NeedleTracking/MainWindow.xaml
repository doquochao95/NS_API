            <BeginStoryboard Storyboard="{StaticResource OpenHistoryScreen}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="Selector.Selected"
                      SourceName="VolatilityOpen">
            <BeginStoryboard Storyboard="{StaticResource OpenVolatility}" />
            <BeginStoryboard Storyboard="{StaticResource OpenVolatilityScreen}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="Selector.Selected"
                      SourceName="RecentOpen">
            <BeginStoryboard Storyboard="{StaticResource OpenRecent}" />
            <BeginStoryboard Storyboard="{StaticResource OpenRecentScreen}" />
        </EventTrigger>
        <EventTrigger RoutedEvent="Selector.Selected"
                      SourceName="RequestOpen">
            <BeginStoryboard Storyboard="{StaticResource OpenRequest}" />
            <BeginStoryboard Storyboard="{StaticResource OpenRequestScreen}" />
        </EventTrigger>

    </Window.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <uc:ControlBarUC Tag="{Binding Title, ElementName=mainWindow}"></uc:ControlBarUC>
        </Grid>
        <Grid Grid.Row="1"
              Background="#080710">
            <DockPanel Height="60"
                       VerticalAlignment="Top"
                       Background="#0F0F20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="90"></ColumnDefinition>
                        <ColumnDefinition Width="60"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0"
                           Source="D:\NS_API\Logo\Techlogo.png"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Margin="20 5 2 5"></Image>
                    <TabControl Grid.Column="1"
                                TabStripPlacement="Bottom"
                                Style="{StaticResource MaterialDesignNavigatilRailTabControl}"
                                materialDesign:NavigationRailAssist.ShowSelectionBackground="True"
                                HorizontalContentAlignment="Left"
                                Margin="100,-8,0,0"
                                Background="Transparent">
                        <TabItem x:Name="VolatilityOpen"
                                 Margin="4"
                                 Width="90">
                            <TabItem.Header>
                                <StackPanel Height="auto"
                                            Width="auto">
                                    <materialDesign:PackIcon Kind="ChartBar"
                                                             Width="30"
                                                             Height="24"
                                                             HorizontalAlignment="Center"
                                                             Foreground="White" />
                                    <TextBlock Text="Biến Động"
                                               HorizontalAlignment="Center"
                                               Foreground="White" />
                                </StackPanel>
                            </TabItem.Header>
                            <TextBlock>
                      <Run Text="tab 2 content. Default look and behaviors." />
                      <LineBreak />
                      <LineBreak />
                      <Run FontStyle="Italic">
                      Praesent sed dui arcu. Vivamus porta auctor sagittis
                    </Run>
                            </TextBlock>
                        </TabItem>
                        <TabItem x:Name="HistoryOpen"
                                 Margin="4"
                                 Width="90">
                            <TabItem.Header>
                                <StackPanel Height="auto"
                                            Width="auto">
                                    <materialDesign:PackIcon Kind="History"
                                                             Width="30"
                                                             Height="24"
                                                             HorizontalAlignment="Center"
                                                             Foreground="White" />
                                    <TextBlock Text="Lịch Sử"
                                               HorizontalAlignment="Center"
                                               Foreground="White" />
                                </StackPanel>
                            </TabItem.Header>
                            <TextBlock>
      <Run Text="tab 2 content. Default look and behaviors." />
      <LineBreak />
      <LineBreak />
      <Run FontStyle="Italic">
      Praesent sed dui arcu. Vivamus porta auctor sagittis
    </Run>
                            </TextBlock>
                        </TabItem>
                        <TabItem x:Name="RecentOpen"
                                 Width="90">
                            <TabItem.Header>
                                <StackPanel Height="auto"
                                            Width="auto">
                                    <materialDesign:PackIcon Kind="ClockTimeNineOutline"
                                                             Width="30"
                                                             Height="24"
                                                             HorizontalAlignment="Center"
                                                             Foreground="White" />
                                    <TextBlock Text="Hiện Tại"
                                               HorizontalAlignment="Center"
                                               Foreground="White" />
                                </StackPanel>
                            </TabItem.Header>
                            <TextBlock>
      <Run Text="tab 3 content. Default look and behaviors." />
      <LineBreak />
      <LineBreak />
      <Run FontStyle="Italic">
      Praesevzddvvvvvvvvvv
    </Run>
                            </TextBlock>
                        </TabItem>
                        <TabItem x:Name="RequestOpen"
                                 Width="90">
                            <TabItem.Header>
                                <StackPanel Height="auto"
                                            Width="auto">
                                    <materialDesign:PackIcon Kind="AlertCircleOutline"
                                                             Width="30"
                                                             Height="24"
                                                             HorizontalAlignment="Center"
                                                             Foreground="White" />
                                    <TextBlock Text="Nhật Ký"
                                               HorizontalAlignment="Center"
                                               Foreground="White" />
                                </StackPanel>
                            </TabItem.Header>
                            <TextBlock>
      <Run Text="tab 3 content. Default look and behaviors." />
      <LineBreak />
      <LineBreak />
      <Run FontStyle="Italic">
      Praesevzddvvvvvvvvvv
    </Run>
                            </TextBlock>
                        </TabItem>
                    </TabControl>
                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="300"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <materialDesign:PackIcon Kind="AlertCircle"
                                                     Width="25"
                                                     Height="25"
                                                     Foreground="#8064E6"
                                                     HorizontalAlignment="Right"
                                                     VerticalAlignment="Center"
                                                     Margin="6"></materialDesign:PackIcon>
                        </Grid>
                        <Grid Grid.Column="1"
                              Width="300"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Right">
                            <TextBlock Foreground="Gray"
                                       FontSize="13"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center">Vui lòng chọn các tùy chọn để xem thông tin</TextBlock>
                        </Grid>
                    </Grid>
                    <materialDesign:Badged Badge="{Binding CartQuantity}"
                                           Grid.Column="3"
                                           HorizontalAlignment="Center"
                                           BadgePlacementMode="TopRight"
                                           Width="35"
                                           Height="35"
                                           VerticalAlignment="Center">
                        <Button Style="{StaticResource MaterialDesignFlatLightButton}"
                                ToolTip="MaterialDesignFlatLightButton"
                                Width="35"
                                Height="35"
                                Padding="0 0 0 0"
                                IsEnabled="{Binding CartButtonEnable}">
                            <materialDesign:PackIcon Kind="CartOutline"
                                                     Height="25"
                                                     Width="25"
                                                     Margin="0 0 0 0" />
                        </Button>
                    </materialDesign:Badged>
                    <StackPanel Grid.Column="4"
                                Orientation="Horizontal">
                        <materialDesign:PopupBox Foreground="Gray"
                                                 StaysOpen="True">
                            <Grid Width="160"
                                  Height="120"
                                  Margin="8,8,8,8">
                                <Grid.Resources>
                                    <Style TargetType="TextBox"
                                           BasedOn="{StaticResource MaterialDesignTextBox}">
                                        <Setter Property="materialDesign:HintAssist.IsFloating"
                                                Value="True" />
                                        <Setter Property="Margin"
                                                Value="5 20 5 20" />
                                    </Style>
                                </Grid.Resources>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0"
                                           Grid.Column="0"
                                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                           Text="{Binding Selected_NS_Staff.StaffName}"></TextBlock>
                                <Label Grid.Row="1"
                                       Grid.Column="0"
                                       Content="Department" />
                                <Label Grid.Row="2"
                                       Grid.Column="0"
                                       Content="CardID" />
                                <Label Grid.Row="3"
                                       Grid.Column="0"
                                       Content="Layer" />
                                <Label Grid.Row="1"
                                       Grid.Column="1"
                                       Content="{Binding Selected_NS_Staff.Department}" />
                                <Label Grid.Row="2"
                                       Grid.Column="1"
                                       Content="{Binding Selected_NS_Staff.CardNumber}" />
                                <Label Grid.Row="3"
                                       Grid.Column="1"
                                       Content="{Binding Selected_NS_Staff.UserLayer}" />
                            </Grid>
                        </materialDesign:PopupBox>
                    </StackPanel>
                </Grid>
            </DockPanel>
        </Grid>
        <Grid Grid.Row="2"
              Background="#080710">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <DockPanel Grid.Column="0"
                       x:Name="GridMenu"
                       Width="250"
                       HorizontalAlignment="Left"
                       Background="#0F0F20"
                       Margin="0,0,0,0">
                <StackPanel>
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type TreeViewItem}">
                            <Setter Property="Foreground"
                                    Value="White"></Setter>
                            <Setter Property="FontSize"
                                    Value="20"></Setter>
                        </Style>
                    </StackPanel.Resources>
                    <Grid Height="35"
                          Background="#67569F"
                          RenderTransformOrigin="0.5,0.5">
                        <Grid.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform />
                                <SkewTransform />
                                <RotateTransform />
                                <TranslateTransform />
                            </TransformGroup>
                        </Grid.RenderTransform>
                        <Button x:Name="ButtonOpenMenu"
                                Visibility="Collapsed"
                                Height="50"
                                Width="30"
                                Margin="0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                ToolTip="Open Menu"
                                Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Foreground="White">
                            <materialDesign:PackIcon Kind="Menu"
                                                     Width="25"
                                                     Height="25" />
                        </Button>
                        <Button x:Name="ButtonCloseMenu"
                                Height="35"
                                Width="40"
                                Margin="0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                ToolTip="Close Menu"
                                Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
                                Background="{x:Null}"
                                BorderBrush="{x:Null}"
                                Foreground="White">
                            <materialDesign:PackIcon Kind="ArrowLeft"
                                                     Width="25"
                                                     Height="25" />
                        </Button>
                    </Grid>
                    <Grid HorizontalAlignment="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <uc:VolatilityMenu x:Name="volatilityMenu"
                                           Grid.Row="0"
                                           Margin="25 20 20 20"
                                           Visibility="Visible"
                                           Opacity="1"
                                           HorizontalAlignment="Left"></uc:VolatilityMenu>
                        <uc:HistoryMenu x:Name="historyMenu"
                                        Grid.Row="0"
                                        Margin="25 30 20 20"
                                        Visibility="Hidden"
                                        Opacity="0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"></uc:HistoryMenu>
                        <uc:RecentMenu x:Name="recentMenu"
                                       Grid.Row="0"
                                       Margin="25 20 20 20"
                                       Visibility="Hidden"
                                       Opacity="0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"></uc:RecentMenu>
                        <uc:RequestMenu x:Name="requestMenu"
                                        Grid.Row="0"
                                        Margin="25 20 20 20"
                                        Visibility="Hidden"
                                        Opacity="0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"></uc:RequestMenu>
                    </Grid>
                </StackPanel>
            </DockPanel>

            <Grid x:Name="volatilityScreen"
                  Grid.Column="1"
                  Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="220"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid>
                        <vuc:LivechartUC></vuc:LivechartUC>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1">
                    <vuc:VolatilityDataGrid></vuc:VolatilityDataGrid>
                </Grid>
            </Grid>
            <Grid x:Name="recentScreen"
                  Grid.Column="1"
                  Visibility="Hidden">
                <Grid>
                    <Grid>
                        <reuc:DeviceRecentUC></reuc:DeviceRecentUC>
                    </Grid>
                </Grid>
            </Grid>
            <Grid x:Name="historyScreen"
                  Grid.Column="1"
                  Visibility="Hidden">
                <Grid>
                    <Grid>
                        <huc:HistoryDataUC></huc:HistoryDataUC>
                    </Grid>
                </Grid>

            </Grid>
            <Grid x:Name="requestScreen"
                  Grid.Column="1"
                  Visibility="Hidden">
                <Grid>
                    <Grid>
                        <ruc:RequestDataGridUC></ruc:RequestDataGridUC>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
 